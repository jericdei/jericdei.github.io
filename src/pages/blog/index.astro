---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import PostCard from '@/components/astro/PostCard.astro'

const posts = await getCollection('posts', (post) => post.data.publishedDate)
---

<Layout title="Blog">
    <section class="container mx-auto grid place-items-center px-4 py-32">
        <h1 class="mt-4 text-center text-3xl lg:text-5xl">Latest Posts</h1>

        <div class="mt-16">
            {posts.map((post) => <PostCard post={post} />)}
        </div>
    </section>
</Layout>
